{% extends 'base.html.twig' %}

{% block title %}First Symfony{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>Hello hello welcome to the main page âœ…</h1>
     
<div class=" text-end"><a href="{{ path('create-post') }}" class="btn btn-primary">
    <i class="fas fa-plus"></i> Add new post
</a></div>



    {% for message in app.flashes('message') %}
      <div class="alert alert-success">
      {{ message }}
      </div>
    {% endfor %}

    <!-- Bootstrap Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href=" {{ path('edit_post', {'id': post.id}) }} " class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href=" {{ path('delete_post', {'id': post.id}) }} " class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?');">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
